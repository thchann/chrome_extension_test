{
  "manifest_version": 3,
  "name": "Product Extractor",
  "version": "1.0.0",
  "description": "Extract product name and image from e-commerce websites",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["site-selectors.js", "junk-sites.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}

